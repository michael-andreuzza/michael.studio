---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Hero from "@/components/landing/Hero.astro";
import Work from "@/components/landing/Work.astro";
import Whatwedo from "@/components/landing/Whatwedo.astro";
import Services from "@/components/landing/Services.astro";
import { AstroSeo } from "@astrolib/seo";
---

<!---
Use AstroSeo in all the pages you want different Seo than the index page
-->
<AstroSeo
  title="Unwrapped"
  description="UNWRAPPED. ⏤ LANDING PAGE DESIGN, REDESIGN & DEVELOPMENT"
  canonical="https://www.unwrappedd.studio"
  openGraph={{
    url: "https://www.unwrappedd.studio",
    title: "Unwrapped",
    description: "UNWRAPPED. ⏤ LANDING PAGE DESIGN, REDESIGN & DEVELOPMENT",
    images: [
      {
        url: "https://www.unwrappedd.studio/opengraph/social-og.jpg",
        width: 1200,
        height: 630,
        alt: "Social open graph",
        type: "image/jpg",
      },
      {
        url: "https://www.unwrappedd.studio/opengraph/twitter-og.jpg",
        width: 4096,
        height: 4096,
        alt: "Twitter open graph",
        type: "image/jpg",
      },
      { url: "https://www.unwrappedd.studio/opengraph/social-og.jpg" },
      { url: "https://www.unwrappedd.studio/opengraph/twitter-og.jpg" },
    ],
    site_name: "unwrappedHQ",
  }}
  twitter={{
    handle: "@TwitterHandle",
    site: "@site",
    cardType: "summary_large_image",
  }}
/>
<BaseLayout>
  <Hero />
  <Work />
  <Whatwedo />
  <Services />
</BaseLayout>
