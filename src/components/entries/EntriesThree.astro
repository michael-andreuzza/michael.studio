---
const { title, url, description, pubDate, author, image } = Astro.props;
---

<a href={url} title={title}>
  <div class="flex flex-col items-center">
    <div>
      <img src={image} alt={title} class="object-cover aspect-square" />
      <h4 class="text-lg lg:text-xl text-white mt-6 font-display uppercase">
        {title}
      </h4>
      <p class="mt-3 text-zinc-500 line-clamp-2">
        {description}
      </p>
      <div class="inline-flex items-center text-xs text-zinc-500">
        <span>{author}</span>
        <time class="ml-3" datetime={pubDate}>{pubDate}</time>
      </div>
    </div>
  </div>
</a>
